{
  "name": "image-resizer",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ahuang0808.image-resizer",
    "productName": "Image Resizer",
    "compression": "maximum",
    "files": [
      "**/*",
      "!dist",
      "!**/*.md",
      "!**/*.test.js",
      "!**/__tests__"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahuang0808/image-resizer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahuang0808/image-resizer/issues"
  },
  "homepage": "https://github.com/ahuang0808/image-resizer#readme",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "electron": "^35.1.5"
  },
  "dependencies": {
    
    "sharp": "^0.34.1"
  }
}